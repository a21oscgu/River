<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardElevation="5dp"
app:cardCornerRadius="5dp"
app:cardBackgroundColor="@color/white"
app:cardMaxElevation="12dp"
android:layout_margin="13dp"
app:cardPreventCornerOverlap="true"

xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/river_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/name"
        android:textSize="22sp"/>

    <!--<ImageView
        android:id="@+id/river_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/river_name"
        app:layout_constraintLeft_toLeftOf="@id/river_name"
        tools:srcCompat="@tools:sample/avatars" />-->

    <TextView
        android:id="@+id/continent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/river_name"
        app:layout_constraintLeft_toLeftOf="@id/river_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/continent" />

    <TextView
        android:id="@+id/continent_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/continent"
        app:layout_constraintTop_toTopOf="@id/continent"
        android:text="@string/data"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/continent"
        app:layout_constraintLeft_toLeftOf="@id/continent"
        android:text="@string/country"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/countries_data"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/countries"
        app:layout_constraintTop_toTopOf="@id/countries"
        android:text="@string/data"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        /><!--This TextView should have 'android:layout_width="wrap_content"' instead. -->

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>